<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" enctype="multipart/form-data" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Campground name</label>
                    <input type="text" class="form-control" required value="<%=campground.title %>" id="title"
                        name="campground[title]">
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a title.</div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" required class="form-control" value="<%=campground.location %>" id="iocation"
                        name="campground[location]">
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a location.</div>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Campground price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" required class="form-control" value="<%=campground.price %>" placeholder=0.00
                            name="campground[price]" id=price aria-label="price" aria-describedby="price-label">
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Please enter a price.</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" required class="form-control" id="description"
                        name="campground[description]"><%=campground.description %></textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a description.</div>
                </div>
                <div class="mb-3">
                    <label for="images" class="form-label">Add images</label>
                    <input class="form-control" type="file" name="image" multiple id="images">
                </div>
                <div class="mb-3">
                    <div class="mb-3">
                        <div class="row">
                            <% campground.images.forEach(function(img, i) {  %>
                                <div class="col-6 mb-3">
                                    <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                                    <div class="form-check-block">
                                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                                        <label for="image-<%=i%>">Delete?</label>
                                    </div>
                                </div>
                            <% })%> 
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Edit campground</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Cancel</a>
        </div>
    </div>